--- 
import BaseLayout from "../layouts/BaseLayout.astro"; 
import Section from "../components/Section.astro"; 
import Hero from "../components/Hero.astro"; 
import Profile from "../components/Profile.astro"; 
import ResearchThemes from "../components/ResearchThemes.astro"; 
import ProjectGrid from "../components/ProjectGrid.astro"; 
import TwoColumnSection from "../components/TwoColumnSection.astro"; 
import QuoteSection from "../components/QuoteSection.astro"; 
import Home from "../components/Home.astro"; 
import ContactForm from "../components/ContactForm.astro"; 
import { getCollection } from 'astro:content';

const helloStatement = await Astro.glob('../content/press-kit/hello.md');
const HelloStatementContent = helloStatement[0]?.Content;

import ContactForm from "../components/ContactForm.astro";
 
const title = "Milana Aernova"; 

// Sample data - replace with your actual data source
const upcomingEvents = [
  {
    title: "Cinema is Power",
    date: "November 8, 2025",
    description: "The Film Dispatch is proud to present a one-day immersive experience that bridges film, music, and dance.",
    link: "https://mcasd.org/events/cinema-is-power"
  },
  {
    title: "Workshop: Interactive Dance Visuals with TouchDesigner",
    date: "December 13, 2025",
    description: "A hands-on workshop exploring innovative approaches to creating real time visuals in TouchDesigner.",
    link: "#"
  }
];

// Get blog posts using Astro content collections
const allBlogPosts = await getCollection('blog');
const recentBlogs = allBlogPosts
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
  .slice(0, 3)
  .map(post => ({
    title: post.data.title,
    date: new Date(post.data.date).toLocaleDateString('en-US', { 
      year: 'numeric', 
      month: 'long', 
      day: 'numeric' 
    }),
    excerpt: post.data.description || '',
    image: post.data.image || '',
    tags: post.data.tags || [],
    link: `/blog/${post.slug}`
  }));
--- 
 
<BaseLayout title={title}> 
  <div class="container"> 
    <Section id="top" /> 
    <Hero /> 
    
    <Section id="about" title="" />
     <div class="about-container">
        <div class="about-text">
          <HelloStatementContent />
        </div>
      </div>
     
    <div class="md-content">     
      <!-- Upcoming Events Section -->
      <Section id="events" title="Upcoming Events & Offerings" />
      <div class="events-grid">
        {upcomingEvents.map((event) => (
          <div class="event-card">
            <h3>{event.title}</h3>
            <p class="event-date">{event.date}</p>
            <p class="event-description">{event.description}</p>
            <a href={event.link} class="event-link" target="_blank">Learn more â†’</a>
          </div>
        ))}
      </div>

      <Section id="featured" title="Featured work" /> 
        <ProjectGrid /> 
      <br />

      <h1 class="page-title">Connect with Me</h1>
      <div class="contactForm">
        <ContactForm />
      </div>

    </div> <!-- md-content --> 
  </div> <!-- container --> 
</BaseLayout> 
 
<style> 
:root {
        --primary-color: rgb(255, 68, 121);
        --bg-color: #ffffff;
        --text-color: #000000;
        --card-bg: #f8f8f8;
        --border-color: #e0e0e0;
    }

    :global(.dark) {
        --bg-color: #000000;
        --text-color: #ffffff;
        --card-bg: #1a1a1a;
        --border-color: #333333;
    }
  #top section h2 { 
    border-bottom: 5px solid red; 
    background-color: red; 
  } 
  .container { 
    max-width: 1330px; 
    padding: 0rem 5rem; 
  } 
   
  .intro-content { 
    font-size: 1.5rem; 
  }

  .about-container {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 3rem;
    margin: 0 auto;
    padding: 2rem 2rem;
    background-color: var(--card-bg);
    flex-wrap: wrap;
  }

  .about-image img {
    width: 320px;
    height: auto;
    border-radius: 1rem;
    box-shadow: 0 6px 18px rgba(0, 0, 0, 0.08);
    object-fit: cover;
  }

  .about-text {
    max-width: 520px;
    color: var(--text-color);
    line-height: 1.7;
  }

  .about-text h2,
  .about-text h3 {
    font-weight: 600;
    font-size: 1.8rem;
    margin-bottom: 1rem;
    color: #1a1a1a;
  }

  .about-text p {
    font-size: 1.05rem;
    margin-bottom: 1.5rem;
  }

  .about-text a {
    color: #5b42f3;
    text-decoration: none;
    position: relative;
  }

  .about-text a::after {
    content: "";
    position: absolute;
    width: 100%;
    height: 3px;
    bottom: -2px;
    left: 0;
    background-color: #e9d5ff;
    opacity: 0.6;
    transition: 0.3s ease;
  }

  .about-text a:hover::after {
    opacity: 1;
  }


  /* Events Section */
  .events-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
    margin-bottom: 4rem;
  }

  .event-card {
    padding: 1.5rem;
    background-color: var(--card-bg);
    backdrop-filter: blur(10px);
    border-radius: 12px;
    transition: transform 0.3s, box-shadow 0.3s, background 0.3s;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  }

  .event-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 12px 48px rgba(0, 0, 0, 0.2);
  }

  .event-card h3 {
    margin-top: 0;
    margin-bottom: 0.5rem;
    font-size: 1.3rem;
    color: var(--primary-color);
  }

  .event-date {
    color: var(--text-color);
    font-size: 0.9rem;
    margin-bottom: 1rem;
    font-weight: 500;
  }

  .event-description {
    line-height: 1.6;
    margin-bottom: 1rem;
    color: var(--text-color);
  }

  .event-link {
    color: var(--primary-color);
    text-decoration: none;
    font-weight: 600;
    transition: color 0.2s;
    margin-left: 0;
    padding-left: 0;
  }

  .event-link:hover {
    font-weight: bold;
  }

  /* Blog Section */
  .blog-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
    margin-bottom: 4rem;
  }

  .blog-card {
    border-radius: 12px;
    overflow: hidden;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    transition: transform 0.3s, box-shadow 0.3s, background 0.3s;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
  }

  .blog-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 12px 48px rgba(0, 0, 0, 0.2);
    background: rgba(255, 255, 255, 1);
  }

  .blog-image {
    width: 100%;
    height: 200px;
    overflow: hidden;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  }

  .blog-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
    opacity: 0.95;
  }

  .blog-card:hover .blog-image img {
    transform: scale(1.08);
    opacity: 1;
  }

  .blog-content {
    padding: 1.75rem;
  }

  .blog-card h3 {
    margin-top: 0;
    margin-bottom: 0.5rem;
    font-size: 1.35rem;
    color: #1a1a1a;
    font-weight: 600;
  }

  .blog-date {
    color: #666;
    font-size: 0.85rem;
    margin-bottom: 0.75rem;
    font-weight: 500;
  }

  .blog-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .tag {
    display: inline-block;
    padding: 0.35rem 0.85rem;
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.15) 0%, rgba(118, 75, 162, 0.15) 100%);
    color: #5a4a9f;
    font-size: 0.75rem;
    border-radius: 20px;
    font-weight: 500;
    border: 1px solid rgba(102, 126, 234, 0.2);
  }

  .blog-excerpt {
    line-height: 1.7;
    margin-bottom: 1.25rem;
    color: #444;
  }

  .blog-link {
    color: #667eea;
    text-decoration: none;
    font-weight: 600;
    transition: color 0.2s;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
  }

  .blog-link:hover {
    color: #764ba2;
    text-decoration: underline;
  }

  /* Contact Section */
  .contact-section {
    margin-top: 2rem;
    margin-bottom: 4rem;
  }

  .contact-intro {
    max-width: 700px;
    margin-bottom: 2rem;
  }

  .contact-intro p {
    font-size: 1.1rem;
    line-height: 1.6;
    color: #333;
  }
   
  @media (max-width: 728px) { 
    .intro-content { 
      font-size: 5em; 
    } 
 
    .container { 
      padding: 0rem 2rem; 
    }

    .events-grid,
    .blog-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .event-card,
    .blog-card {
      padding: 1rem;
    }
  } 
</style>