---
// pages/blog/index.astro
import BaseLayout from "../../layouts/BaseLayout.astro";

// Get all blog posts
const allPosts = await Astro.glob('../../content/blog/*.mdx');

// Sort posts by date (newest first)
const posts = allPosts.filter(p => !p.frontmatter.hidden).sort((a, b) => {
    const dateA = new Date(a.frontmatter.date || 0);
    const dateB = new Date(b.frontmatter.date || 0);
    return dateB.getTime() - dateA.getTime();
});

// Format date helper
function formatDate(date: string) {
    return new Date(date).toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
    });
}
---

<BaseLayout title="Blog | Milana Aernova">
    <main class="blog-index">
        <div class="container">
            <h1 class="page-title">Blog</h1>
            <p class="subtitle">Thoughts and reflections on my creative journey and research.</p>

            {posts.length === 0 ? (
                <div class="empty-state">
                    <p>No blog posts yet.</p>
                </div>
            ) : (
                <div class="posts-grid">
                    {posts.map((post) => (
                        <article class="post-card">
                            <a href={`/blog/${post.file.split('/').pop()?.replace('.md', '')}`} class="post-link">
                                {post.frontmatter.image && (
                                    <div class="post-image">
                                        <img src={post.frontmatter.image} alt={post.frontmatter.title} />
                                    </div>
                                )}
                                <div class="post-content">
                                    <div class="post-meta">
                                        <time datetime={post.frontmatter.date}>
                                            {formatDate(post.frontmatter.date)}
                                        </time>
                                    </div>
                                    <h2 class="post-title">{post.frontmatter.title}</h2>
                                    {post.frontmatter.description && (
                                        <p class="post-description">{post.frontmatter.description}</p>
                                    )}
                                    <span class="read-more">Read more â†’</span>
                                </div>
                            </a>
                        </article>
                    ))}
                </div>
            )}
        </div>
    </main>
</BaseLayout>

<style>
    :root {
      --primary-color: rgb(255, 68, 121);
      --bg-color: #ffffff;
      --text-color: #000000;
      --card-bg: #f8f8f8;
      --border-color: #e0e0e0;
  }

    :global(.dark) {
        --bg-color: #000000;
        --text-color: #ffffff;
        --card-bg: #1a1a1a;
        --border-color: #333333;
    }

    .blog-index {
        padding: 3rem 0;
        min-height: calc(100vh - 5rem);
        margin-top: 5rem;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
    }
    .subtitle {
        text-align: center;
        font-size: 1.2rem;
        color: var(--text-color);
        opacity: 0.8;
        margin-bottom: 3rem;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }

    /* Empty State */
    .empty-state {
        background-color: var(--card-bg);
        padding: 3rem 2rem;
        border-radius: 8px;
        text-align: center;
    }

    .empty-state p {
        font-size: 1.1rem;
        margin-bottom: 2rem;
    }

    .empty-state code {
        background-color: var(--border-color);
        padding: 0.2rem 0.4rem;
        border-radius: 3px;
        font-family: monospace;
    }

    .example-post {
        background-color: var(--bg-color);
        border: 2px solid var(--border-color);
        border-radius: 8px;
        padding: 1.5rem;
        max-width: 600px;
        margin: 0 auto;
        text-align: left;
    }

    .example-post h3 {
        margin-bottom: 1rem;
        font-family: "Italiana", sans-serif;
    }

    .example-post pre {
        background-color: var(--card-bg);
        padding: 1rem;
        border-radius: 4px;
        overflow-x: auto;
    }

    .example-post code {
        font-family: monospace;
        font-size: 0.9rem;
    }

    /* Posts Grid */
    .posts-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 2rem;
    }

    .post-card {
        background-color: var(--card-bg);
        border-radius: 8px;
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .post-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    .post-link {
        text-decoration: none;
        color: var(--text-color);
        display: block;
    }

    .post-image {
        aspect-ratio: 16/9;
        overflow: hidden;
        background-color: var(--border-color);
    }

    .post-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .post-card:hover .post-image img {
        transform: scale(1.05);
    }

    .post-content {
        padding: 1.5rem;
    }

    .post-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
        font-size: 0.9rem;
        opacity: 0.7;
    }

    .post-tags {
        display: flex;
        gap: 0.5rem;
    }

    .tag {
        background-color: var(--primary-color);
        color: white;
        padding: 0.25rem 0.75rem;
        border-radius: 15px;
        font-size: 0.75rem;
        font-weight: 600;
    }

    .post-title {
        font-size: 1.5rem;
        margin-bottom: 0.75rem;
        line-height: 1.3;
    }

    .post-description {
        font-size: 1rem;
        line-height: 1.6;
        margin-bottom: 1rem;
        opacity: 0.9;
    }

    .read-more {
        color: var(--primary-color);
        font-weight: 600;
        font-size: 0.95rem;
    }

    /* Responsive */
    @media screen and (max-width: 768px) {
        .container {
            padding: 0 1.5rem;
        }

        .page-title {
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }

        .subtitle {
            font-size: 1rem;
            margin-bottom: 2rem;
        }

        .posts-grid {
            grid-template-columns: 1fr;
        }
    }
</style>