---
// ProjectLayout.astro - Complete layout with dynamic metadata
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import VideoBG from "../components/VideoBG.astro";
import ScrollSpy from "../components/ScrollSpy.astro";
import "../styles/global.css";

// Define the props interface
export interface Props {
  title: string;
  description?: string;
  image?: string;
  imageAlt?: string;
  keywords?: string;
  type?: string;
  author?: string;
  publishedTime?: string;
  modifiedTime?: string;
}

// Get props with defaults
const {
  title,
  description = "Interdisciplinary artists Memo Akten & Katie Peyton Hofstadter investigate consciousness, intelligence & planetary systems through research-based art bridging embodied experience with emerging technologies.",
  image = "/images/superradiance-og-default.jpg",
  imageAlt = "Superradiance Lab - Research-based art exploring consciousness and intelligence",
  keywords = "consciousness, artificial intelligence, embodied cognition, research art, Memo Akten, Katie Peyton Hofstadter",
  type = "article",
  author = "Memo Akten & Katie Peyton Hofstadter",
  publishedTime,
  modifiedTime
} = Astro.props;

// Construct full URLs
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const imageURL = new URL(image, Astro.site);
const fullTitle = `${title} | Milana Aernova`;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/images/logo.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <!-- Basic Meta Tags -->
    <title>{fullTitle}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content={author} />
    <link rel="canonical" href={canonicalURL} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto+Flex:opsz,wght@8..144,100..1000&display=swap"
      rel="stylesheet"
    />


    <script
      src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"
      defer></script>

      <link rel="preconnect" href="https://fonts.googleapis.com">
      <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
      <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300..700&display=swap" rel="stylesheet">
  </head>
  <body>
    <VideoBG videoId="1091030034" />
    <Header />
    <!-- <h1>{title}</h1> -->
    <slot />
    <Footer />
    <ScrollSpy />
    <!-- <script src="/scripts/script.js"></script> -->
    <!-- <script src="/scripts/menu.js"></script> -->
  </body>
</html>