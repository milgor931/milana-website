---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import VideoBG from "../components/VideoBG.astro";
import ScrollSpy from "../components/ScrollSpy.astro";
import "../styles/global.css";

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto+Flex:opsz,wght@8..144,100..1000&display=swap"
      rel="stylesheet"
    />

    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300..700&display=swap" rel="stylesheet">

    <script
      src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"
      defer></script>

    <title>{title}</title>


    <!-- Basic Meta Tags -->
    <title>Superradiance Lab - Research-Based Art Exploring Consciousness, Intelligence & Planetary Systems</title>
    <meta name="description" content="Interdisciplinary artists Memo Akten & Katie Peyton Hofstadter investigate consciousness, intelligence & planetary systems through research-based art bridging embodied experience with emerging technologies.">
    <meta name="keywords" content="consciousness, artificial intelligence, embodied cognition, planetary systems, research art, Memo Akten, Katie Peyton Hofstadter, multiscale intelligence, ecology, technosphere">
    <meta name="author" content="Memo Akten & Katie Peyton Hofstadter">
    
    <!-- Open Graph (Facebook, LinkedIn, WhatsApp) -->
    <meta property="og:title" content="Superradiance Lab - Research-Based Art Exploring Consciousness & Intelligence">
    <meta property="og:description" content="Interdisciplinary artists Memo Akten & Katie Peyton Hofstadter investigate consciousness, intelligence & planetary systems through research-based art bridging embodied experience with emerging technologies.">
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://lab.superradiance.net/">
    <meta property="og:image" content="https://lab.superradiance.net/images/superradiance.jpg">
    <meta property="og:image:alt" content="Superradiance Lab - Artistic exploration of consciousness, intelligence and planetary systems">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">
    <meta property="og:site_name" content="Superradiance Lab">
    <meta property="og:locale" content="en_US">
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@memo_akten">
    <meta name="twitter:creator" content="@memo_akten">
    <meta name="twitter:title" content="Superradiance Lab">
    <meta name="twitter:description" content="Interdisciplinary research lab investigating consciousness, intelligence & planetary systems through research-based art that bridges embodied experience with emerging technologies.">
    <meta name="twitter:image" content="https://lab.superradiance.net/images/superradiance.jpg">
    <meta name="twitter:image:alt" content="Interdisciplinary research lab investigating consciousness, intelligence & planetary systems through research-based art that bridges embodied experience with emerging technologies.">
    
    <!-- Additional Social Platforms -->
    <!-- Pinterest -->
    <meta name="pinterest-media" content="https://lab.superradiance.net/images/superradiance.jpg">
    <meta name="pinterest-description" content="Interdisciplinary research lab investigating consciousness, intelligence & planetary systems through research-based art that bridges embodied experience with emerging technologies.">
    
    <!-- LinkedIn -->
    <meta property="linkedin:title" content="Superradiance Lab">
    <meta property="linkedin:description" content="Interdisciplinary research lab investigating consciousness, intelligence & planetary systems through research-based art that bridges embodied experience with emerging technologies.">
    
    <!-- Canonical URL -->
    <link rel="canonical" href="https://lab.superradiance.net/">
    
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico">
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    
    <!-- Schema.org Structured Data (JSON-LD) -->
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "Superradiance Lab",
        "url": "https://lab.superradiance.net/",
        "description": "Interdisciplinary research lab investigating consciousness, intelligence & planetary systems through research-based art that bridges embodied experience with emerging technologies.",
        "author": [
            {
                "@type": "Person",
                "name": "Memo Akten",
                "url": "https://memo.tv",
                "sameAs": [
                    "https://x.com/memo_akten",
                    "https://instagram.com/memo_akten",
                    "https://bsky.app/profile/memoakten.bsky.social"
                ]
            },
            {
                "@type": "Person", 
                "name": "Katie Peyton Hofstadter",
                "url": "https://katiepeyton.com",
                "sameAs": [
                    "https://x.com/katiehofstadter",
                    "https://instagram.com/katiepeytonhofstadter", 
                    "https://bsky.app/profile/katiepeyton.bsky.social"
                ]
            }
        ],
        "publisher": {
            "@type": "Organization",
            "name": "Superradiance Lab"
        },
        "keywords": "consciousness, artificial intelligence, embodied cognition, planetary systems, research art, multiscale intelligence, ecology, technosphere"
    }
    </script>

  </head>
  <body>
    <VideoBG videoId="1091030034" />
    <Header />
    <!-- <h1>{title}</h1> -->
    <slot />

    <Footer />
    <ScrollSpy />
    <!-- <script src="/scripts/script.js"></script> -->
    <!-- <script src="/scripts/menu.js"></script> -->
  </body>
</html>
