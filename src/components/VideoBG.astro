---
const { videoId } = Astro.props;
---

<div id="video-background">
<video 
    src="https://pub-59c214a33be94398ba879fa1a46bbed3.r2.dev/video.mp4"
    autoplay
    muted
    loop
    playsinline
    poster="/images/Screenshot 2025-10-21 214451.png"
></video>
</div>

<style is:global>
#video-background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    overflow: hidden;
    z-index: -1;
    transition: opacity 0.5s ease;
}

#video-background video {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100vw;
    height: 56.25vw; /* 16:9 aspect ratio */
    min-height: 100vh;
    min-width: 177.77vh; /* 16:9 aspect ratio */
    transform: translate(-50%, -50%);
    filter: invert(1);
}

/* Only invert the video in dark mode */
html.dark #video-background video {
    filter: invert(0);
}
</style>

