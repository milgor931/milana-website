---
interface Props {
  title: string;
  subtitle?: string;
  description?: string;
  image?: string;
  imageAlt?: string;
  buttonText?: string;
  buttonLink?: string;
  reverse?: boolean;
  className?: string;
}

const {
  title,
  subtitle,
  description,
  image,
  imageAlt = title,
  buttonText = 'Learn More',
  buttonLink = '#',
  reverse = false,
  className = '',
} = Astro.props;
---

<div class={`two-column-section ${className}`}>
  <div class={`two-column-content ${reverse ? 'reverse' : ''}`}>
    <div class="two-column-image">
      {image && (
        <img src={image} alt={imageAlt} />
      )}
    </div>
    <div class="two-column-text">
      <h2>{title}</h2>
      {subtitle && <h3>{subtitle}</h3>}
      {description && <p>{description}</p>}
      {buttonLink && (
        <a href={buttonLink} class="two-column-btn">{buttonText}</a>
      )}
    </div>
  </div>
</div>

<style>
  .two-column-section {
    width: 100%;
  }

  .two-column-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0;
    min-height: 400px;
    background-color: var(--bg-color);
    overflow: hidden;
  }

  .two-column-content.reverse {
    direction: rtl;
  }

  .two-column-content.reverse > * {
    direction: ltr;
  }

  .two-column-image {
    position: relative;
    overflow: hidden;
    background: #f1f5f9;
  }

  .two-column-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .two-column-text {
    padding: 3rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .two-column-text h2 {
    font-size: 2rem;
    margin-bottom: 0.5rem;
    font-weight: 600;
    color: var(--text-color);
  }

  .two-column-text h3 {
    font-size: 1.25rem;
    margin-bottom: 1rem;
    font-weight: 400;
    color: var(--text-color);
  }

  .two-column-text p {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--text-color);
    margin-bottom: 2rem;
  }

  .two-column-btn {
    display: inline-block;
    padding: 0.75rem 2rem;
    background: rgb(255, 68, 121);
    color: white;
    text-decoration: none;
    border-radius: 0.25rem;
    font-weight: 500;
    transition: background 0.2s;
    align-self: flex-start;
  }

  .two-column-btn:hover {
    background: rgba(190, 35, 79, 1);
  }

  @media (max-width: 768px) {
    .two-column-content,
    .two-column-content.reverse {
      grid-template-columns: 1fr;
      direction: ltr;
    }

    .two-column-image {
      min-height: 250px;
    }

    .two-column-text {
      padding: 2rem;
    }

    .two-column-text h2 {
      font-size: 1.5rem;
    }

    .two-column-text h3 {
      font-size: 1.125rem;
    }

    .two-column-text p {
      font-size: 1rem;
    }
  }
</style>