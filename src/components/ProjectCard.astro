---
export interface Props {
  title: string;
  subtitle: string,
  description?: string;
  image?: string;
  video?: string;
  slug: string;
  year: string;
}

const { title, subtitle, description, image, video, slug, year } = Astro.props;
---

<article class="project-card">
  <a href={`/projects/${slug}`} class="card-link">
    <div class="media-container">
      {image ? (
        <img
          src={image}
          alt={`${title} project`}
          class="card-media"
          loading="lazy"
        />
      ) : (
        <div class="placeholder-media" aria-label="No media available">
          <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
            <circle cx="8.5" cy="8.5" r="1.5"/>
            <polyline points="21,15 16,10 5,21"/>
          </svg>
        </div>
      )}

      <div class="overlay">
        <h3 class="card-title">{title} <span class="year">| {year}<span> </h3>
        <!--- {description && <p class="card-description">{description}</p>} --->
      </div>
    </div>
  </a>
</article>

<style>
.project-card {
  //border-radius: 12px;
  overflow: hidden;
  aspect-ratio: 5 / 4;
  //box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
              0 2px 4px -1px rgba(0, 0, 0, 0.06);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.project-card:hover {
  transform: translateY(-4px);
  //box-shadow: 0 20px 25px -5px rgba(0,0,0,0.1),
              0 10px 10px -5px rgba(0,0,0,0.04);
}

.card-link {
  display: block;
  width: 100%;
  height: 100%;
  text-decoration: none;
  color: inherit;
}

.media-container {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.card-media {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.5s ease;
}

.project-card:hover .card-media {
  transform: scale(1.05);
}

.placeholder-media {
  width: 100%;
  height: 100%;
  background: #f1f5f9;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #64748b;
}

.overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 1rem;
  background: linear-gradient(to top, rgba(0,0,0,0.6), rgba(0,0,0,0));
  color: white;
}

.card-title {
  font-size: 1.25rem;
  font-weight: 600;
  margin: 0 0 0.25rem 0;
}

.card-description {
  font-size: 0.875rem;
  margin: 0;
  line-height: 1.3;
}

.overlay .year {
  font-weight: 300;
}
</style>
